<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/primaryImageUpdate"
            android:minHeight="90dp"
            android:minWidth="90dp"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginRight="10dp"
            android:src="@drawable/pictures" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:id="@+id/usernametxt"
                    android:layout_gravity="center_vertical|top"
                    android:layout_marginRight="20dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/usernameedit"
                    android:minWidth="150dp"
                    android:inputType="text|textNoSuggestions" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:id="@+id/passtxt"
                    android:layout_gravity="center_vertical|top"
                    android:layout_marginRight="20dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/passwordedit"
                    android:inputType="textNoSuggestions|textPassword"
                    android:minWidth="150dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:id="@+id/emailtxt"
                    android:layout_gravity="center_vertical|top"
                    android:layout_marginRight="20dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/emiledit"
                    android:minWidth="150dp"
                    android:inputType="textNoSuggestions|textEmailAddress" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photos:"
            android:id="@+id/textView"
            android:layout_gravity="center_vertical|top"
            android:layout_marginRight="20dp" />

        <ImageView
            android:id="@+id/userimg1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/imageuser"
            android:scaleType="fitXY"
            android:src="@drawable/pictures"
            android:layout_marginRight="26dp" />

        <ImageView
            android:id="@+id/userimg2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="26dp"
            android:contentDescription="@string/imageuser"
            android:scaleType="fitXY"
            android:src="@drawable/pictures"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/userimg3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/imageuser"
            android:scaleType="fitXY"
            android:src="@drawable/pictures" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update account!"
            android:id="@+id/updatebutton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login another account!"
            android:id="@+id/loginanotherbtn"
            android:layout_gravity="center_horizontal|bottom" />
    </LinearLayout>

</LinearLayout>